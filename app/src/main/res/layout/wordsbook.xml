<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a5f1d1e4">

    <LinearLayout
        android:id="@+id/WordsBookBookAndNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/selectWordsbookName"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#a0d2e9"
                android:text="暂无应用词本"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#a0d2e9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:background="#a0d2e9"/>
            <TextView
                android:id="@+id/selectWordsbookWrodsNum"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="left"
                android:textSize="15dp"
                android:background="#a0d2e9"
                android:text="单词数：0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:background="#a0d2e9"/>
            <TextView
                android:id="@+id/selectWordsbookModuleNum"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="left"
                android:textSize="15dp"
                android:background="#a0d2e9"
                android:text="模块数：0"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/transparent"/>

    <ListView
        android:id="@+id/WordsBookListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="20dp" />
</LinearLayout>
